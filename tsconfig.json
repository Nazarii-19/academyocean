{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "~/enums/*": ["src/enums/*"],
      "~/helpers/*": ["src/helpers/*"],
      "~/modules/*": ["src/modules/*"],
      "~/components/*": ["src/components/*"],
      "~/pages/*": ["src/pages/*"],
      "~/router/*": ["src/router/*"],
      "~/store/*": ["src/store/*"],
      "~/styles/*": ["src/styles/*"],
      "~/types/*": ["src/types/*"],
      "~/ui/*": ["src/ui/*"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
